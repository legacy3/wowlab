{
  "name": "wowlab-workspace",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "cli": "cargo build --release --manifest-path crates/Cargo.toml -p wowlab-cli && ./crates/target/release/wowlab",
    "setup": "./scripts/setup.sh",
    "build": "./scripts/build.sh all",
    "build:parsers": "./scripts/build.sh parsers",
    "build:engine": "./scripts/build.sh engine",
    "build:rust": "./scripts/build.sh rust",
    "build:portal": "./scripts/build.sh portal",
    "dev": "pnpm -r --filter @apps/portal --parallel dev",
    "test": "pnpm -r --if-present test",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r --if-present --no-bail lint",
    "lint:fix": "pnpm -r --if-present --no-bail lint:fix",
    "format": "pnpm -r --if-present --no-bail format",
    "check": "./scripts/build.sh check",
    "ncu": "pnpm -r --if-present ncu"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-plugin-perfectionist": "^5.1.0",
    "npm-check-updates": "^19.2.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
