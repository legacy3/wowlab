{
  "name": "@wowlab/mcp-server",
  "version": "0.3.0",
  "description": "MCP server for querying WoW spell and item data from WowLab",
  "type": "module",
  "bin": {
    "wowlab-mcp": "./bin.mjs"
  },
  "files": [
    "build",
    "bin.mjs"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "ncu": "ncu -u",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "mcp",
    "world-of-warcraft",
    "wow",
    "spell-data",
    "item-data",
    "mcp-server"
  ],
  "author": "WowLab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/legacy3/wowlab.git",
    "directory": "apps/mcp-server"
  },
  "homepage": "https://github.com/legacy3/wowlab/tree/main/apps/mcp-server#readme",
  "bugs": {
    "url": "https://github.com/legacy3/wowlab/issues"
  },
  "dependencies": {
    "@effect/ai": "^0.32.1",
    "@effect/platform": "^0.93.3",
    "@effect/platform-node": "^0.100.0",
    "@supabase/supabase-js": "^2.48.1",
    "@wowlab/core": "workspace:*",
    "@wowlab/services": "workspace:*",
    "effect": "^3.19.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18"
  }
}
