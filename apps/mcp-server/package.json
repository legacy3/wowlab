{
  "name": "@wowlab/mcp-server",
  "version": "0.2.1",
  "description": "MCP server for querying WoW spell and item data from WowLab",
  "type": "module",
  "bin": {
    "wowlab-mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "ncu": "ncu -u",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "world-of-warcraft",
    "wow",
    "spell-data",
    "item-data",
    "mcp-server"
  ],
  "author": "WowLab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/legacy3/wowlab.git",
    "directory": "apps/mcp-server"
  },
  "homepage": "https://github.com/legacy3/wowlab/tree/main/apps/mcp-server#readme",
  "bugs": {
    "url": "https://github.com/legacy3/wowlab/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@supabase/supabase-js": "^2.48.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18"
  }
}
