{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@packages/lib-innocent": ["packages/lib-innocent/src/index.ts"],
      "@packages/lib-innocent/*": ["packages/lib-innocent/src/*"]
    },
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  }
}
