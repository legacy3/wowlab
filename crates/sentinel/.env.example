# =============================================================================
# Sentinel Configuration
# =============================================================================
# All env vars use SENTINEL_ prefix.

# -----------------------------------------------------------------------------
# Required
# -----------------------------------------------------------------------------
SENTINEL_DISCORD_TOKEN=
SENTINEL_DATABASE_URL=postgresql://postgres:<password>@db.<ref>.supabase.co:5432/postgres?sslmode=require
SENTINEL_CENTRIFUGO_URL=https://beacon.wowlab.gg
SENTINEL_CENTRIFUGO_KEY=
SENTINEL_CENTRIFUGO_TOKEN_SECRET=

# -----------------------------------------------------------------------------
# HTTP Server (optional)
# -----------------------------------------------------------------------------
# SENTINEL_HTTP_PORT=8080

# -----------------------------------------------------------------------------
# Webhooks (optional)
# -----------------------------------------------------------------------------
SENTINEL_GITHUB_WEBHOOK_SECRET=
SENTINEL_VERCEL_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# AI Summaries (optional)
# -----------------------------------------------------------------------------
SENTINEL_AI_ENABLED=false
SENTINEL_AI_API_KEY=
# SENTINEL_AI_MODEL=anthropic/claude-haiku-4.5
# SENTINEL_AI_MAX_INPUT_TOKENS=4000
# SENTINEL_AI_DIFF_OUTPUT_TOKENS=500
# SENTINEL_AI_COMMIT_OUTPUT_TOKENS=300

# -----------------------------------------------------------------------------
# Cron Schedules (optional, 6-field: sec min hour day month weekday)
# -----------------------------------------------------------------------------
# SENTINEL_CRON_PRESENCE=*/5 * * * * *
# SENTINEL_CRON_RECLAIM=*/30 * * * * *
# SENTINEL_CRON_CLEANUP=0 0 * * * *
# SENTINEL_CRON_UPTIME=*/30 * * * * *

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
RUST_LOG=wowlab_sentinel=info
