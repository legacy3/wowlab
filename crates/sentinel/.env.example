# =============================================================================
# Sentinel Configuration
# =============================================================================
# Copy this file to .env and fill in the values.

# -----------------------------------------------------------------------------
# Discord
# -----------------------------------------------------------------------------
# Bot token from https://discord.com/developers/applications
DISCORD_TOKEN=

# -----------------------------------------------------------------------------
# Supabase
# -----------------------------------------------------------------------------
# Direct Postgres connection URL (for queries + LISTEN/NOTIFY)
SUPABASE_DB_URL=postgresql://postgres:<password>@db.<ref>.supabase.co:5432/postgres?sslmode=require

# -----------------------------------------------------------------------------
# Centrifugo
# -----------------------------------------------------------------------------
# Base URL for the Centrifugo server (no trailing /api)
CENTRIFUGO_API_URL=https://beacon.wowlab.gg

# API key for server-side operations (publish, presence, etc.)
CENTRIFUGO_HTTP_API_KEY=

# -----------------------------------------------------------------------------
# Webhooks
# -----------------------------------------------------------------------------
# Secret for verifying GitHub webhook signatures (configured in GitHub repo settings)
GITHUB_WEBHOOK_SECRET=

# Secret for verifying Vercel webhook signatures (from Vercel project settings)
VERCEL_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# AI (OpenRouter)
# -----------------------------------------------------------------------------
# API key for OpenRouter (for commit summarization)
OPENROUTER_API_KEY=

# Model to use for summarization (default: anthropic/claude-haiku-4.5)
OPENROUTER_MODEL=anthropic/claude-haiku-4.5

# -----------------------------------------------------------------------------
# Logging (optional)
# -----------------------------------------------------------------------------
RUST_LOG=wowlab_sentinel=info
